<configuration>
  <appSettings>
    <!-- Defines which device is preferred on windows platform.  
         If set to 1, Direct3D will be used instead of OpenGL (0)
         This switch is obtional and can be deleted. OpenGL is 
         used as default than.
    -->
    <add key="useDirect3D" value="0" />
  </appSettings>
</configuration>